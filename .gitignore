    <script>
      // Delhi Time Update
      function updateDelhiTime() {
        const options = {
          timeZone: "Asia/Kolkata",
          hour: "2-digit",
          minute: "2-digit",
          second: "2-digit",
        };
        const formatter = new Intl.DateTimeFormat([], options);
        document.getElementById("delhiTime").textContent = formatter.format(
          new Date()
        );
      }
      setInterval(updateDelhiTime, 1000);
      updateDelhiTime();
